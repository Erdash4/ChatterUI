{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "@globals": ["constants/global"],
            "@components/*": ["components/*"],
            "@assets/*": ["assets/*"],
            "@public/*": ["public/*"],
            "@constants/*": ["constants/*"],
            "@lib/*": ["lib/*"],
            "@db": ["db/db"],
        },
        "allowJs": true,
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
        "**/*.js",
        "constants/*.ts",
        ".expo/types/**/*.ts",
        "expo-env.d.ts",
        "app/_layout.tsx",
    ],
}
