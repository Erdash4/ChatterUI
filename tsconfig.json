{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "@globals": ["app/constants/Global"],
            "@components/*": ["app/components/*"],
            "@components": ["app/components"],
            "@constants/*": ["app/constants/*"],
            "@assets/*": ["assets/*"],
            "@public/*": ["public/*"],
            "@lib/*": ["lib/*"],
            "@db": ["db/db"],
        },
        "allowJs": true,
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
        "**/*.js",
        "**/*.jsx",
        ".expo/types/**/*.ts",
        "expo-env.d.ts",
        "app/_layout.tsx",
    ],
}
